{
  "name": "clickfun",
  "version": "7.2.0",
  "description": "A fun click-based game with PWA support and automated versioning",
  "type": "module",
  "main": "index.html",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "vite dev",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "release": "npm run build && npm run test && npx semantic-release",
    "version:patch": "npm version patch --no-git-tag-version && npm run update-version-files",
    "version:minor": "npm version minor --no-git-tag-version && npm run update-version-files",
    "version:major": "npm version major --no-git-tag-version && npm run update-version-files",
    "update-version-files": "node scripts/update-version.js",
    "check-version": "node scripts/check-version.js",
    "setup": "node scripts/setup.js",
    "test-pwa": "node scripts/test-pwa-version.js",
    "health-check": "node scripts/project-health-monitor.js",
    "post-publish": "echo 'Post-publish tasks completed'",
    "postversion": "git add . && git commit -m \"chore: bump version to %s\" && git tag v%s",
    "dev:start": "node scripts/dev-tools.js start",
    "dev:build": "node scripts/dev-tools.js build",
    "dev:clean": "node scripts/dev-tools.js clean",
    "dev:help": "node scripts/dev-tools.js help",
    "code-quality:check": "node scripts/code-quality-check.js check",
    "code-quality:fix": "node scripts/code-quality-check.js fix",
    "code-quality:eslint": "node scripts/code-quality-check.js eslint-fix",
    "code-quality:format": "node scripts/code-quality-check.js format",
    "code-quality:help": "node scripts/code-quality-check.js help",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "maintenance": "node scripts/maintenance.js"
  },
  "keywords": [
    "game",
    "click",
    "tps",
    "pwa",
    "javascript",
    "web-game",
    "performance",
    "automation"
  ],
  "author": "s123104",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@fontsource/fredoka-one": "^5.2.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.6",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "babel-jest": "^29.7.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "core-js": "^3.45.0",
    "eslint": "^9.9.1",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "material-symbols": "^0.34.1",
    "prettier": "^3.3.3",
    "semantic-release": "^24.0.0",
    "vite": "^5.4.2",
    "vite-plugin-pwa": "^0.20.1"
  },
  "dependencies": {
    "workbox-core": "^7.1.0",
    "workbox-precaching": "^7.1.0",
    "workbox-routing": "^7.1.0",
    "workbox-strategies": "^7.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/haotool/clickfun.git"
  },
  "bugs": {
    "url": "https://github.com/haotool/clickfun/issues"
  },
  "homepage": "https://haotool.github.io/clickfun/"
}
